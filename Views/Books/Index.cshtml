@model IEnumerable<Projeto.Models.Books>

@{
    ViewData["Title"] = "Index";
}

<h1>Index - Livros</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Authorname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Noofbooks)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Authorname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Noofbooks)
            </td>
            <td class="btn-group" role="group" aria-label="Basic outlined example">
                <a asp-action="Edit" asp-route-id="@item.BooksId" class="btn btn-outline-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.BooksId" class="btn btn-outline-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.BooksId" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
